@page "{id}"
@model TakeTestModel
@{
    ViewData["Title"] = "Test passing";
}
<h1>@Model.Test.Name</h1>
<form method="post">
    @for (int i = 0; i < Model.Test.Questions.Count; i++)
    {
        <div class="question">
            <p>@Model.Test.Questions[i].Question</p>
            @for (int j = 0; j < Model.Test.Questions[i].Answers.Count; j++)
            {
                <label>
                    <input type="radio" name="Answers[@i]" value="@j" required>
                    @Model.Test.Questions[i].Answers[j]
                </label>
            }
        </div>
    }
    <button type="submit">Show result</button>
</form>
@if (Model.Score.HasValue)
{
    <div id="result">
        <h2>Your result: @Model.Score.Value из @Model.Test.Questions.Count</h2>
    </div>
}
