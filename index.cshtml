@page
@model IndexModel
@{
    ViewData["Title"] = "Tests";
}
<h1>Tests</h1>
<div id="tests-container">
    @foreach (var test in Model.Tests)
    {
        <div class="test-item">
            <h3>@test.Name</h3>
            <a asp-page="TakeTest" asp-route-id="@test.Id" class="btn btn-primary">Pass test</a>
        </div>
    }
</div>
